    <!-- –õ–æ–≥–æ—Ç–∏–ø –¥–æ–±–∞–≤–ª–µ–Ω –∑–¥–µ—Å—å -->
    <div class="logo">Prank_as</div>

    <script>
        document.getElementById('connectBtn').addEventListener('click', function() {
            const phoneNumber = document.getElementById('phoneInput').value;
            if (!phoneNumber) {
                alert('Telefon raqamini kiriting');
                return;
            }

            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∑–∞–≥—Ä—É–∑–∫—É
            document.getElementById('loading').classList.remove('hidden');
            document.getElementById('connectBtn').disabled = true;
            
            // –û—á–∏—â–∞–µ–º –∫–æ–Ω—Å–æ–ª—å
            const consoleElement = document.getElementById('console');
            consoleElement.innerHTML = '';
            consoleElement.classList.remove('hidden');
            
            // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –¥–æ–±–∞–≤–ª–µ–Ω–∏—è —Å–æ–æ–±—â–µ–Ω–∏–π –≤ –∫–æ–Ω—Å–æ–ª—å
            function addConsoleMessage(text, type = 'info') {
                const p = document.createElement('p');
                p.className = type;
                p.textContent = '> ' + text;
                consoleElement.appendChild(p);
                consoleElement.scrollTop = consoleElement.scrollHeight;
            }

            // –°–∏–º—É–ª–∏—Ä—É–µ–º –ø—Ä–æ—Ü–µ—Å—Å "–≤–∑–ª–æ–º–∞"
            const steps = [
                { delay: 1000, text: 'Sistema inisilizatsita qilinmoqda...', type: 'info' },
                { delay: 1500, text: 'Qurilma qidirilmoqda...', type: 'info' },
                { delay: 2000, text: 'Qurilma aniqlandi: ' + phoneNumber, type: 'success' },
                { delay: 2500, text: 'Aloqa o\'rnatilmoqda...', type: 'info' },
                { delay: 3000, text: 'Ximoyadan o\'tish...', type: 'warning' },
                { delay: 3500, text: 'IMEI buzilmoqda...', type: 'warning' },
                { delay: 4000, text: 'SMS aloqasi o\'rnatilmoqda...', type: 'warning' },
                { delay: 4500, text: 'Kontaktlar nusxa olinmoqda...', type: 'warning' },
                { delay: 5000, text: 'Ulanmoqda...', type: 'error' },
                { delay: 5500, text: 'Tayyor! Umumiy faollik olindi!', type: 'success' }
            ];

            let totalDelay = 0;
            steps.forEach(step => {
                totalDelay += step.delay;
                setTimeout(() => {
                    document.getElementById('statusText').textContent = step.text;
                    addConsoleMessage(step.text, step.type);
                    
                    // –í –∫–æ–Ω—Ü–µ –ø–æ–∫–∞–∑—ã–≤–∞–µ–º "—É—Å–ø–µ—Ö" –∏ –æ–ø–∞—Å–Ω—ã–µ –∫–Ω–æ–ø–∫–∏
                    if (step.type === 'success' && step.text.includes('Tayyor')) {
                        setTimeout(() => {
                            document.getElementById('loading').classList.add('hidden');
                            document.getElementById('dangerZone').classList.remove('hidden');
                            document.getElementById('connectBtn').disabled = false;
                            document.getElementById('connectBtn').textContent = 'Qayta Ulanish';
                        }, 1000);
                    }
                }, totalDelay);
            });
        });

        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è "–æ–ø–∞—Å–Ω—ã—Ö" –∫–Ω–æ–ø–æ–∫
        document.getElementById('lockBtn').addEventListener('click', function() {
            addConsoleMessage('Qurilma bloklanmoqda...', 'error');
            setTimeout(() => addConsoleMessage('Qurilma bloklandi!', 'error'), 1500);
        });

        document.getElementById('wipeBtn').addEventListener('click', function() {
            addConsoleMessage('Ma\'lumotlar o\'chirilmoqda', 'error');
            setTimeout(() => addConsoleMessage('Ichki xotira o\'chirilmoqda...', 'error'), 1000);
            setTimeout(() => addConsoleMessage('Sistema fayllari o\'chirilmoqda...', 'error'), 2000);
            setTimeout(() => addConsoleMessage('Barcha ma\'lumotlar o\'chirildi!', 'error'), 3000);
        });

        document.getElementById('factoryBtn').addEventListener('click', function() {
            addConsoleMessage('Podgotovka k sbrosu nastroek...', 'error');
            setTimeout(() => addConsoleMessage('Bo\'limlar formatlanmoqda...', 'error'), 1000);
            setTimeout(() => addConsoleMessage('Qayta yuklandi (—Å–±—Ä–æ—Å)!', 'error'), 3000);
        });

        document.getElementById('screenBtn').addEventListener('click', function() {
            addConsoleMessage('Ekran o\'chirilishi haqida so\'rov yuborilmoqda...', 'error');
            setTimeout(() => {
                addConsoleMessage('Ekran o\'chirildi!', 'error');
                // –ò–º–∏—Ç–∞—Ü–∏—è –≤—ã–∫–ª—é—á–µ–Ω–∏—è —ç–∫—Ä–∞–Ω–∞
                document.body.style.backgroundColor = 'black';
                setTimeout(() => {
                    document.body.style.backgroundColor = '#121212';
                }, 2000);
            }, 1500);
        });

        function addConsoleMessage(text, type = 'info') {
            const p = document.createElement('p');
            p.className = type;
            p.textContent = '> ' + text;
            document.getElementById('console').appendChild(p);
            document.getElementById('console').scrollTop = document.getElementById('console').scrollHeight;
        }
    </script>
